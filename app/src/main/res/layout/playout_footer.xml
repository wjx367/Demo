<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/PlayoutHeaderText" >
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="25dp"
    android:text="1111"
    android:id="@+id/timer_tv"
    />
    <FrameLayout
        style="@style/Block"
        android:layout_gravity="center" >

        <ImageView
            android:id="@+id/arrowup_imageview"
            style="@style/Block"
            android:layout_gravity="center"
            android:background="@drawable/icon_pullup" />

        <ImageView
            android:id="@+id/loading_imageview"
            style="@style/Block"
            android:layout_gravity="center"
            android:background="@drawable/icon_loading"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/state_imageview"
            style="@style/Block"
            android:layout_gravity="center"
            android:visibility="gone" />
    </FrameLayout>

    <TextView
        android:id="@+id/state_textview"
        style="@style/PlayoutStateText"
        android:text="上拉加载更多" />

</LinearLayout>