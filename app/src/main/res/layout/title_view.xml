<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_view"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:id="@+id/blank"
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:background="#000000"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/blank"
        android:background="#ffffff"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/left_btn"
            style="@style/Text.Title_Button"
            android:layout_width="@dimen/titleview_height"
            android:layout_height="@dimen/titleview_height"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/img_desc"
            android:minWidth="60dip"
            android:background="@drawable/title_bar_bg"
            android:scaleType="centerInside"
            android:src="@drawable/back_btn" />

        <TextView
            android:id="@+id/small_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="标题"
            android:textColor="@color/tcolor_b1"
            android:textSize="20sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/left_btn1"
            style="@style/Text.Title_Button"
            android:layout_width="wrap_content"
            android:layout_height="20dip"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/img_desc"
            android:minWidth="60dip"
            android:src="@drawable/selfcenter_lb"
            android:visibility="gone" />

        <TextView
            android:id="@+id/title_text"
            style="@style/Text.Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="标题"
            android:textSize="18sp" />
		<ImageView 
		    android:id="@+id/title_pic"
		    style="@style/Text.Title"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center"
		    android:layout_weight="1"
		    android:visibility="gone"
		    />
        <TextView
            android:id="@+id/right_text"
            style="@style/Text.Title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/titleview_height"
            android:layout_gravity="center_vertical"
            android:paddingRight="10dp"
            android:minWidth="60dip"
            android:visibility="gone"
            android:text="提现记录"
            android:background="@drawable/title_bar_bg"
            android:textColor="@color/home_textcolor_blue"
            android:textSize="16sp" />
        <ImageView
            android:visibility="gone"
            android:id="@+id/right_btn"
            style="@style/Text.Title_Button"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/img_desc"
            android:minWidth="60dip"
            android:src="@drawable/data"
            android:textColor="#ffffff" />
    </LinearLayout>

    <View
       style="@style/Line"/>

</LinearLayout>